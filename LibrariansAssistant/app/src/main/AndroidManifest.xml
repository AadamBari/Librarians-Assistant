<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aadam.librariansassistant" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/book_stack"
        android:label="@string/menu"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListBooks"
            android:label="@string/title_activity_list_books" >
        </activity>
        <activity
            android:name=".AddBook"
            android:label="@string/title_activity_add_book" >
        </activity>
        <activity
            android:name=".Edition"
            android:label="@string/title_activity_edition" >
        </activity>
    </application>

</manifest>
